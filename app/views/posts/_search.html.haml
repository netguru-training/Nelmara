.search_controls
  %form.form-inline
    .form-group
      = form_tag posts_path, method: :get, class: 'tapes_search' do
        = text_field_tag :query, params[:query], autocomplete: :off, class: 'search_field form-control'
        = submit_tag "Search", name: nil, class: 'search_submit btn btn-default'

